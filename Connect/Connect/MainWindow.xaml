<Window x:Class="Connect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Connect"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <StackPanel>
            <Button Content="Play In Column1" Click="Button_Click" Margin="10" />
            <Button Content="Play In Column2" Click="Button_Click_1" Margin="10" />
            <Button Content="Play In Column3" Click="Button_Click_2" Margin="10" />
            <Button Content="Play In Column4" Click="Button_Click_3" Margin="10" />
            <Button Content="Play In Column5" Click="Button_Click_4" Margin="10" />
            <Button Content="Play In Column6" Click="Button_Click_5" Margin="10" />
            <Button Content="Play In Column7" Click="Button_Click_6" Margin="10" />
            <TextBlock Text="Winner: " />
            <TextBlock x:Name="winner" />
            <Button Content="Reset" Click="Button_Click_7" Margin="10" />
        </StackPanel>
        <StackPanel Margin="100,50">
            <Canvas x:Name="BoardGrid" />
        </StackPanel>
    </StackPanel>
</Window>
